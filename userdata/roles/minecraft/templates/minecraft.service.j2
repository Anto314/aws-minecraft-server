[Unit]
Description=Minecraft Server

[Service]
WorkingDirectory={{minecraft.installation_path}}
Restart=always
ExecStart=/usr/bin/java -Xms{{minecraft.java.xms}} -Xmx{{minecraft.java.xmx}} -XX:+UseG1GC -jar {{minecraft.installation_path}}/{{installers[minecraft.flavor].jar_cmd}}
ExecStop=/usr/bin/bash {{minecraft.installation_path}}/bin/stopServer.sh
[Install]
WantedBy=multi-user.target

#-XX:+UseG1GC -Xmx4G -Xms4G -Dsun.rmi.dgc.server.gcInterval=2147483646 -XX:+UnlockExperimentalVMOptions -XX:G1NewSizePercent=20 -XX:G1ReservePercent=20 -XX:MaxGCPauseMillis=50 -XX:G1HeapRegionSize=32M