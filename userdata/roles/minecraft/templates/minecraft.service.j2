[Unit]
Description=Minecraft Server

[Service]
WorkingDirectory={{minecraft.installation_path}}
Restart=always
ExecStart=/usr/bin/java -Xms{{minecraft.java.xms}} -Xmx{{minecraft.java.xmx}} -XX:+UseG1GC -jar {{minecraft.installation_path}}/{{installers[minecraft.flavor].jar_cmd}} nogui
ExecStop=/usr/bin/bash {{minecraft.installation_path}}/bin/stopServer.sh
[Install]
WantedBy=multi-user.target